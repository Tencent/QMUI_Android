    <style name="QMUI.BottomSheet.Title">
        <item name="android:textColor">?attr/qmui_skin_support_bottom_sheet_title_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingLeft">?attr/qmui_bottom_sheet_padding_hor</item>
        <item name="android:paddingRight">?attr/qmui_bottom_sheet_padding_hor</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="QMUI.BottomSheet.Cancel">
        <item name="android:textColor">?attr/qmui_skin_support_bottom_sheet_cancel_text_color</item>
