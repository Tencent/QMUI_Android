        <item name="qmui_dialog_menu_container_padding_bottom_when_action_exist">27dp</item>
        <item name="qmui_dialog_menu_item_height">48dp</item>
    </style>

    <style name="QMUI.Dialog.MenuItem">
        <item name="android:background">?attr/qmui_skin_support_s_dialog_menu_item_bg</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">?attr/qmui_dialog_padding_horizontal</item>
        <item name="android:paddingRight">?attr/qmui_dialog_padding_horizontal</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/qmui_skin_support_dialog_menu_item_text_color</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="qmui_dialog_menu_item_mark_drawable">
            ?attr/qmui_skin_support_dialog_mark_drawable
        </item>
        <item name="qmui_dialog_menu_item_check_drawable">
            ?attr/qmui_skin_support_s_dialog_check_drawable
        </item>
        <item name="qmui_dialog_menu_item_check_mark_margin_hor">6dp</item>
